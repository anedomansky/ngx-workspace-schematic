{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "LibrarySchematic",
  "title": "Angular Library options schema",
  "type": "object",
  "description": "Create a library in the workspace",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the library"
    },
    "libraryName": {
      "type": "string",
      "description": "The name of the library",
      "x-prompt": "Library name:"
    },
    "libraryNamespace": {
      "type": "string",
      "description": "The namespace of the library",
      "x-prompt": "Library namespace:",
      "examples": ["@myorg", "@username"]
    }
  },
  "required": ["name", "libraryName"]
}
