{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "NgNewSchematic",
  "title": "ng new options schema",
  "type": "object",
  "description": "Initialize a new complete Angular workspace",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the workspace",
      "x-prompt": "Workspace name:"
    },
    "type": {
      "type": "string",
      "description": "The type of workspace to create",
      "default": "complete",
      "enum": ["application", "library", "complete"],
      "x-prompt": {
        "message": "What type of workspace would you like to create?",
        "type": "list",
        "items": [
          {
            "value": "complete",
            "label": "Complete"
          },
          {
            "value": "application",
            "label": "Application"
          },
          {
            "value": "library",
            "label": "Library"
          }
        ]
      }
    },
    "appName": {
      "type": "string",
      "description": "The name of the application"
    },
    "libraryName": {
      "type": "string",
      "description": "The name of the library"
    },
    "libraryNamespace": {
      "type": "string",
      "description": "The namespace of the library",
      "alias": "library-namespace"
    }
  },
  "required": ["name"]
}
