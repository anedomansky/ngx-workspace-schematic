{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "NgNewSchematic",
  "title": "ng new options schema",
  "type": "object",
  "description": "Initialize a new complete Angular workspace",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the workspace",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "withApplication": {
      "type": "boolean",
      "description": "Create an application in the workspace",
      "default": true
    },
    "withLibrary": {
      "type": "boolean",
      "description": "Create a library in the workspace",
      "default": true
    },
    "appName": {
      "type": "string",
      "description": "The name of the application"
    },
    "libraryName": {
      "type": "string",
      "description": "The name of the library"
    },
    "libraryNamespace": {
      "type": "string",
      "description": "The namespace of the library",
      "alias": "library-namespace"
    }
  }
}
