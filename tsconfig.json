{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "ES2020"
    ],
    "declaration": true,
    "module": "ES2020",
    "moduleResolution": "Node16",
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2020"
  },
  "include": [
    "src/**/*"
  ]
}
