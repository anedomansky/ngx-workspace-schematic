{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./",
    "lib": [
      "ES2020"
    ],
    "declaration": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2020"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/*/files/**/*"
  ]
}
